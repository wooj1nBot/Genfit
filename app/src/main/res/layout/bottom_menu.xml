<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.fragment.app.FragmentContainerView>

    </FrameLayout>
<RelativeLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:src="@drawable/bottom_bar_img_2">

    </ImageView>

    <ImageView
        android:id="@+id/home_btn"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="53.5dp"
        android:layout_marginBottom="46.5dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:src="@drawable/home_btn">

    </ImageView>

    <ImageView
        android:id="@+id/my_page_btn"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="47dp"
        android:background="#FFFFFF"
        android:clickable="true"
        app:srcCompat="@drawable/img_mypage" />

    <ImageView
        android:alpha="0.9"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/hanger_img_background"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="98dp">

    </ImageView>

    <ImageView
        android:id="@+id/chat_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:clickable="true"
        android:src="@drawable/hanger_img" />


        </RelativeLayout>
</RelativeLayout>